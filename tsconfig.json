{
  "include": [
    "./src"
  ],
  "exclude": [
    "./dist"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "bundler",
    "module": "preserve",
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "removeComments": false,
    "useDefineForClassFields": false
  }
}
